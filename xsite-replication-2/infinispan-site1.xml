<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:11.0 https://infinispan.org/schemas/infinispan-config-11.0.xsd
                            urn:infinispan:server:11.0 https://infinispan.org/schemas/infinispan-server-11.0.xsd"
        xmlns="urn:infinispan:config:11.0"
        xmlns:server="urn:infinispan:server:11.0">

   <jgroups>
      <stack name="global-cluster" extends="tcp">
         <!-- Replace default bind_address & bind_port -->
         <TCP stack.combine="COMBINE" bind_port="9000" bind_addr="127.0.0.1"/>

         <!-- Remove MPING protocol from the stack and add TCPPING -->
         <MPING stack.combine="REMOVE"/>
         <TCPPING initial_hosts="127.0.0.1[9000],127.0.0.1[9100]" stack.combine="INSERT_AFTER" stack.position="TCP"/>
      </stack>
      <stack name="local-cluster" extends="tcp">
         <!-- Replace default bind_address & bind_port -->
         <TCP stack.combine="COMBINE" bind_port="7800" bind_addr="127.0.0.1"/>

         <!-- Remove MPING protocol from the stack and add TCPPING -->
         <MPING stack.combine="REMOVE"/>
         <TCPPING initial_hosts="127.0.0.1[7800]" stack.combine="INSERT_AFTER" stack.position="TCP"/>

         <!-- Add RELAY2 for cross-site communication and the site names -->
         <relay.RELAY2 site="site1" xmlns="urn:org:jgroups" max_site_masters="1000"/>
         <remote-sites default-stack="global-cluster">
            <remote-site name="site1"/>
            <remote-site name="site2"/>
         </remote-sites>
      </stack>
   </jgroups>

   <cache-container name="default" statistics="true">
      <transport cluster="${cluster.name:cluster1}" stack="local-cluster"/>
   </cache-container>

   <server xmlns="urn:infinispan:server:11.0">
      <interfaces>
         <interface name="public">
            <inet-address value="${infinispan.bind.address:127.0.0.1}"/>
         </interface>
      </interfaces>

      <socket-bindings default-interface="public" port-offset="${infinispan.socket.binding.port-offset:0}">
         <socket-binding name="default" port="${infinispan.bind.port:11222}"/>
         <socket-binding name="memcached" port="11221"/>
      </socket-bindings>

      <security>
         <security-realms>
            <security-realm name="default">
               <!-- Uncomment to enable TLS on the realm -->
               <!-- server-identities>
                  <ssl>
                     <keystore path="application.keystore" relative-to="infinispan.server.config.path"
                               keystore-password="password" alias="server" key-password="password"
                               generate-self-signed-certificate-host="localhost"/>
                  </ssl>
               </server-identities-->
               <properties-realm groups-attribute="Roles">
                  <user-properties path="users.properties" relative-to="infinispan.server.config.path" plain-text="true"/>
                  <group-properties path="groups.properties" relative-to="infinispan.server.config.path"/>
               </properties-realm>
            </security-realm>
         </security-realms>
      </security>

      <endpoints socket-binding="default" security-realm="default">
         <hotrod-connector name="hotrod"/>
         <rest-connector name="rest"/>
      </endpoints>
   </server>
</infinispan>
